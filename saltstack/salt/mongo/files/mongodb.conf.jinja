# Check pillar for special variable options
{% from "mongo/map.jinja" import mongo with context %}


storage:
    dbPath: {{ mongo.config.dbpath }}
    journal:
        enabled: true

systemLog:
    quiet: true
    {% if mongo.config.logpath %}
    destination: file
    path: {{ mongo.config.logpath }}/mongod.log
    logAppend: true
    {% endif %}

net:
    http:
        enabled: true
        RESTInterfaceEnabled: true
